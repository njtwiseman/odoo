<odoo>
  <data>
	<record model="ir.ui.view" id="oreilly.update_list">
	  <field name="name">update list</field>
	  <field name="model">oreilly.update</field>
	  <field name="arch" type="xml">
		<tree>
		  <field name="name"/>
		  <field name="numberOfUpdates"/>
		  <field name="lastUpdated"/>
		</tree>
	  </field>
	</record>


	<record model="ir.ui.view" id="oreilly.update_form">
	  <field name="name">update form</field>
	  <field name="model">oreilly.update</field>
	  <field name="arch" type="xml">
		<form>
		  <group>
			<field name="name"/>
			<button name="oreilly_update" 
			  type="object" string="Run Update" model="oreilly.update"/> 
		  </group>
		</form>
	  </field>
	</record>

  </data>
</odoo>
